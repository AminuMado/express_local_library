<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav.ejs') %>
        <div class="col-sm-10">
            <h1>Author: <%- author.name %></h1>
            <p> <%-  author.date_of_birth_formatted %> - <%-  author.date_of_death_formatted %> </p>
            <div>
              <h4>Books</h4>
              <dl>
                <% if (author_books) { %> 
                  <% author_books.forEach(book => { %>
                   <dt> <a href=<%- book.url %>> <%- book.title %>  </a>  </dt>
                   <dd> <%- book.summary  %>  </dd>
                  <% }) %>
                  <% } else { %>
                <p>This author has no books</p>
                <% } %>
              </dl>
            </div>
            <hr>
            <p>
              <a href=<%- `${author.url}/delete` %> >Delete Author</a>
            </p>
            <p>
              <a href=<%- `${author.url}/update`  %> >Update Author</a>
            </p>
        </div>
      </div>
    </div>
  </body>
</html>

 