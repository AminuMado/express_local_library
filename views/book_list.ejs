<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav.ejs') %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <% if (book_list) { %>
            <ul>
              <% book_list.forEach(book => { %>
              <li>
                <a href=<%- book.url %> > <%- book.title %></a>
                (<%- book.author.name %>)
              </li>
              <% }) %>
            </ul>
            <% } else { %>
            <p>There are no books.</p>
            <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
