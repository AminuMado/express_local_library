<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav.ejs') %>
        <div class="col-sm-10">
            <h1><%- genre.name %></h1>
              <h4>Books</h4>
              <dl>
                <% if (genre_books) { %> 
                  <% genre_books.forEach(book => { %>
                   <dt> <a href=<%- book.url %>> <%- book.title %>  </a>  </dt>
                   <dd> <%- book.summary %> </dd>
                  <% }) %>
                  <% } else { %>
                <p>This genre has no books</p>
                <% } %>
              </dl>
        </div>
      </div>
    </div>
  </body>
</html>

 

 