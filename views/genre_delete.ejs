<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('./partials/nav.ejs') %>
        <div class="col-sm-10">
            <h1><%- title %>: <%- genre.name  %> </h1>
          <% if (genre_books?.length) { %>
            <p> <strong>Delete the following books before attempting to delete this genre</strong> </p>
          <div>
            <h4>Books</h4>
            <dl>
              <% genre_books.forEach(book => { %>
               <dt>
                <a href=<%- book.url  %> > <%- book.title  %>  </a>
               </dt>
               <dd> <%- book.summary  %>  </dd>
              <% }) %>
            </dl>
          </div>
          <% }  else {%>
            <p>Do you really want to delete this Genre?</p>
            <form action="" method="post">
              <div class="form-group">
                <input type="hidden" id="genreid" name="genreid" class="form-control" required value=<%- genre._id %> >
                <button class="btn btn-primary" type="submit">Delete</button>
              </div>
            </form>
          <% } %>            
        </div>
      </div>
    </div>
  </body>
</html>

 